<%- include('partials/header') -%>

  <section class="container">
    <div class="justify-center">
      <ul class="justify-center p-8">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="justify-center mt-2 border-2 list-none">
           <a href="/profile/<%= posts[i].user%>"> <h4 class="no-underline decoration-2 text-primary capitalize hover:uppercase list-none font-semibold font-sans font-weight-bold ml-2"><%= posts[i].userName%></h4></a>
           <p class="justify-center list-none ml-2"><%= posts[i].title%></p>
            <a href="/post/<%= posts[i]._id%>">
              
              <img class="w-full justify-center md:w-2/3  mt-0" src="<%= posts[i].image%>">
            </a>

            
              <h5 class="col-3 justify-center mt-1 ml-2 list-none">Likes: <%= posts[i].likes%></h5>
              
            </div>
          </div>
          </li>
        <% } %>
        </ul>
    </div>
  </section>  
<%- include('partials/footer') -%>
